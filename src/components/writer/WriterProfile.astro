---
// src/components/writer/WriterProfile.astro
import { Picture } from "astro:assets";
// Usiamo la stessa immagine del profilo, ma puoi cambiarla se vuoi
import ProfilePicture from "../../assets/profile.jpg";

const profile = {
    name: "Alessandro La Martina",
    title: "Scrittore e Sviluppatore Narrativo",
    location: "Torino, Italia",
    description:
        "Quando non scrivo codice, scrivo storie. Esploro mondi attraverso racconti, sceneggiature e romanzi, con una predilezione per il fantasy e la fantascienza. Qui raccolgo i miei progetti narrativi.",
};
---

<div
    class="flex flex-col gap-6 items-center text-center sm:items-start sm:text-left"
>
    <div class="flex flex-col sm:flex-row gap-4 sm:items-center">
        <!-- L'immagine del profilo. Il bordo ora usa il colore primario del tema light. -->
        <Picture
            src={ProfilePicture}
            formats={["webp"]}
            width={96}
            height={96}
            alt={"Foto profilo di " + profile.name}
            title={profile.name}
            class="w-24 h-24 rounded-xl object-cover border-2 border-blue-600 mx-auto sm:mx-0"
        />

        <div>
            <!-- Colori del testo adattati per lo sfondo chiaro -->
            <h1 class="text-3xl md:text-4xl font-bold text-zinc-900">
                {profile.name}
            </h1>
            <p class="text-lg mb-2 text-blue-700">
                {profile.title}
            </p>
            <p
                class="flex items-center justify-center sm:justify-start text-base text-zinc-600"
            >
                <svg
                    class="-mt-0.5 inline mr-2"
                    fill="none"
                    height="14"
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    viewBox="0 0 24 24"
                    width="14"
                    xmlns="http://www.w3.org/2000/svg"
                >
                    <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"
                    ></path>
                    <circle cx="12" cy="10" r="3"></circle>
                </svg>
                {profile.location}
            </p>
        </div>
    </div>

    <!-- Colore del testo della descrizione adattato per lo sfondo chiaro -->
    <p class="text-lg leading-relaxed mt-4 text-zinc-700">
        {profile.description}
    </p>
</div>
