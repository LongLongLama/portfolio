---
// src/components/writer/SwitchToCoder.astro
import { Image } from "astro:assets";
// Trova un'icona SVG semplice per il "codice" e mettila in `src/assets/writer/`
import codeIcon from "../../assets/writer/code-icon.svg";
---

<div class="flex flex-col items-center text-center mt-12">
  <Image
    src={codeIcon}
    alt="Icona di parentesi di codice"
    width="80"
    class="mb-4 opacity-70"
  />
  <p class="text-lg text-zinc-600 mb-4" style="font-family: 'Caveat', cursive;">
    ...non sei qui per le parole?
  </p>
  <a
    href="/"
    class="inline-block px-6 py-3
            font-bold text-white bg-blue-600 rounded-lg
            hover:bg-blue-700 transition-colors shadow-lg
            text-2xl"
    style="font-family: 'Caveat', cursive;"
  >
    Portami al codice
  </a>
</div>
