---
interface Project {
    name: string;
    description: string;
    role?: string;
    link?: {
        url?: string;
        target?: string;
        title?: string;
        buttonLabel?: string;
    };
}

const projects: Project[] = [
    {
        name: "Tirocinio in Fragment SRL",
        role: "Full-Stack Developer",
        description:
            "Progettazione UX/UI e sviluppo di un'interfaccia utente per una piattaforma di storie illustrate con AI, integrando API di modelli generativi e usando TypeScript per il frontend.",
    },
    {
        name: "Progetto Scolastico - Liceo 'G. Peano'",
        role: "Full-Stack Developer",
        description:
            "Creazione di un'applicazione web completa per la digitalizzazione dello sportello didattico, con backend sviluppato in Java e database gestito con MySQL.",
    },
    {
        name: "Grimorio Digitale (Progetto Personale)",
        role: "Architetto e Sviluppatore Full-Stack",
        description:
            "Un assistente per Dungeons & Dragons scritto in C#/.NET. Automatizza la creazione dei personaggi e l'avanzamento di livello, gestendo regole e inventari. Include due interfacce: una comoda app console per i giocatori e una Web API per espansioni future.",
        link: {
            url: "https://github.com/LongLongLama/grimorio-digitale",
            buttonLabel: "Vedi il codice su GitHub",
        },
    },
    {
        name: "Academy C# in BIT SPA",
        description:
            "Formazione intensiva di 320 ore su tutto l'ecosistema .NET: C#, Entity Framework, ADO.NET, ASP.NET e SQL Server.",
    },
];
---

<div>
    <!-- <h2 class="text-2xl font-bold text-white mb-4">Latest Projects</h2> -->

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        {
            projects.map((project) => (
                <div class="flex flex-col justify-center items-start border border-gray-700 rounded-lg p-4 bg-black">
                    <h3 class="text-xl font-semibold text-white mb-2">
                        {project.name}
                    </h3>

                    <p class="text-gray-400">{project.description}</p>

                    {project.link?.url ? (
                        <a
                            href={project.link.url}
                            title={project.link.title || project.name}
                            target={project.link.target || "_blank"}
                            class="
                                w-full px-4 py-2.5 mt-4 text-center

                                border border-gray-600 rounded-lg

                                hover:text-primary
                                hover:border-primary
                            "
                        >
                            {project.link.buttonLabel ||
                                "Vedi il codice su GitHub"}
                        </a>
                    ) : null}
                </div>
            ))
        }
    </div>
</div>
