---
// src/components/ContentLink.astro
interface Props {
    contentId: string;
    contentName: string;
    className?: string; // Manteniamo la prop opzionale
}
const { contentId, contentName, className } = Astro.props;
---

<label
    for={contentId}
    class={[
        "tab-link",
        "flex items-center gap-2 py-2 px-4 cursor-pointer",
        "border-b-2 border-transparent", // Bordo inferiore trasparente di default
        "transition-colors duration-200", // Anima il cambio di colore

        // --- QUESTA Ãˆ LA PARTE MODIFICATA ---

        // Stile per la WRITER MODE (light, default)
        "text-zinc-500 hover:text-blue-700",

        // Stile per la CODER MODE (dark)
        "dark:text-gray-400 dark:hover:text-white",

        // Applica la classe extra per la dimensione del font (es. 'text-lg')
        className,
    ].join(" ")}
>
    <svg
        class="w-4 h-4"
        fill="none"
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        viewBox="0 0 24 24"
        xmlns="http://www.w3.org/2000/svg"
    >
        <path
            d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"
        ></path>
        <polyline points="14 2 14 8 20 8"></polyline>
    </svg>

    <h2>{contentName}</h2>
</label>
