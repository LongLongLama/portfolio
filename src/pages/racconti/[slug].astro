---
// src/pages/racconti/[slug].astro
import WriterLayout from "../../layouts/WriterLayout.astro";

// Questa funzione è obbligatoria per le pagine dinamiche in Astro.
// In futuro, leggerà i tuoi file Markdown per generare le pagine.
// Per ora, creiamo delle pagine finte.
export async function getStaticPaths() {
    const racconti = [
        { slug: "il-significante", title: "Il Significante" },
        { slug: "un-periodico-pulsare", title: "Un Periodico Pulsare" },
        { slug: "lo-stretto-delle-sirene", title: "Lo Stretto delle Sirene" },
        { slug: "di-noi-e-le-rocce", title: "Di Noi e le Rocce" },
        { slug: "oggi-devi-morire", title: "Oggi Devi Morire!" },
    ];

    return racconti.map((racconto) => ({
        params: { slug: racconto.slug },
        props: { opera: racconto },
    }));
}

const { opera } = Astro.props;
---

<WriterLayout>
    <div
        class="bg-stone-100 p-8 md:p-12 max-w-4xl mx-auto rounded-lg shadow-lg"
        style="font-family: 'Merriweather', serif;"
    >
        <h1
            class="text-4xl md:text-5xl font-bold text-zinc-900 mb-8 text-center"
            style="font-family: 'Caveat', cursive;"
        >
            {opera.title}
        </h1>

        <div class="prose prose-lg max-w-none text-zinc-800 leading-relaxed">
            <p>
                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis
